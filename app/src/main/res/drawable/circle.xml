<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
           android:shape="oval">
            <solid
               android:color="@color/transparent"/>
            <padding
               android:bottom="5dp"
               android:left="5dp"
               android:right="5dp"
               android:top="5dp"/>
            <stroke
               android:width="3dp"
               android:color="@color/orange"/>
        </shape>
    </item>
    <item>
        <shape
           android:shape="oval">
            <solid
               android:color="#00666666"/>

            <size
               android:width="120dp"
               android:height="120dp"/>
            <stroke
               android:width="3dp"
               android:color="@color/orange"/>
        </shape>

    </item>
</layer-list>