<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/password_layout"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   tools:context="com.fz.fzapp.common.Password">

    <TextView
       android:text="@string/titlePassword"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/textView"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:textColor="@color/orange"
       android:textStyle="normal|bold"/>

    <Button
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:layout_below="@+id/textView"
       android:background="@color/gray"
       android:id="@+id/splitter"
       android:layout_marginTop="8dp"
       android:layout_alignLeft="@+id/textView"
       android:layout_alignStart="@+id/textView"/>

    <EditText
       style="@style/DefaultEditText"
       android:id="@+id/etPasswordLogin"
       android:layout_marginTop="150dp"
       android:layout_marginRight="25dp"
       android:ems="10"
       android:drawableLeft="@drawable/ic_lock_open_black"
       android:maxLength="75"
       android:hint="@string/hintPassword"
       android:text="123456"
       android:inputType="textPassword"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_alignRight="@+id/splitter"
       android:layout_alignEnd="@+id/splitter"/>

    <RelativeLayout
       style="@style/DefaultButton"
       android:id="@+id/rlPasswordLogin"
       android:layout_below="@id/etPasswordLogin"
       android:layout_marginLeft="140dp"
       android:layout_marginTop="40dp"
       android:layout_alignRight="@+id/etPasswordLogin"
       android:layout_alignEnd="@+id/etPasswordLogin">

        <Button
           android:layout_width="38dp"
           android:layout_height="32dp"
           android:background="@drawable/ic_arrow_forward_24dp"
           android:id="@+id/btnPasswordLogin"
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
