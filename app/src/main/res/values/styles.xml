<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">@dimen/DefaultActivity</item>
    </style>

    <style name="DefaultUtils1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultUtils2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/rectroundwhitegray</item>
    </style>

    <style name="DefaultUtils3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultEditText" parent="DefaultUtils2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="DefaultButton" parent="DefaultUtils1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/rectroundorange</item>
    </style>

    <style name="DefaultGrayButton" parent="DefaultUtils1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/rectroundgray</item>
    </style>

    <style name="DefaultHead1" parent="DefaultUtils3">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DefaultSplitter" parent="DefaultUtils3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>
</resources>
